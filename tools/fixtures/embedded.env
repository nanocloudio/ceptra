# Embedded single-node Clustor for dev/integration
CEPTRA_CLUSTOR_MODE=embedded
CEPTRA_ADMIN_BIND=127.0.0.1:26020
CEPTRA_RAFT_BIND=127.0.0.1:26021
CEPTRA_ADVERTISE_HOST=127.0.0.1
CEPTRA_NODE_SPIFFE=spiffe://nanocloud.io/ns/default/sa/node-a
CEPTRA_DATA_DIR=target/ceptra-clustor
CEPTRA_WAL_DIR=target/ceptra-clustor/wal
CEPTRA_SNAPSHOT_DIR=target/ceptra-clustor/snapshots
CEPTRA_TLS_IDENTITY_CERT=../clustor/examples/mini-cluster/certs/node-a-chain.pem
CEPTRA_TLS_IDENTITY_KEY=../clustor/examples/mini-cluster/certs/node-a-key.pem
CEPTRA_TLS_TRUST_BUNDLE=../clustor/examples/mini-cluster/certs/ca.pem
# Raft client tuning (defaults shown)
CEPTRA_RAFT_CLIENT_TIMEOUT_MS=5000
CEPTRA_RAFT_CLIENT_RETRY_ATTEMPTS=3
CEPTRA_RAFT_CLIENT_BACKOFF_MS=50
# Uncomment to opt into stub placements for dev-only seeds
# CEPTRA_STUB_RUNTIME=1
# CEPTRA_ALLOW_SEED_PLACEMENTS=1
